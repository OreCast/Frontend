<section>
  <article>
    <div class="text-large">
        <img src="https://cdn.onlinewebfonts.com/svg/img_375537.png" alt="Storage" style="width:30px;">
        {{.StoragePath}}
    </div>
    <hr/>
    <div class="grid grid-gapless">
        <div class="column column-3">
            <b>ETag</b>
        </div>
        <div class="column column-3">
            <b>Timestamp</b>
        </div>
        <div class="column column-3">
            <b>Size (bytes)</b>
        </div>
        <div class="column column-3">
            <b>Name</b>
        </div>
    </div>
{{range $d := .Datasets}}
    <div class="grid grid-gapless">
        <div class="column column-3">
            {{$d.ShortETag}}...
            <input type="hidden" value="{{$d.ETag}}">
        </div>
        <div class="column column-3">
            {{$d.LastModified}}
        </div>
        <div class="column column-3">
            {{$d.Size}} 
        </div>
        <div class="column column-3">
            <a href="{{$.DataManagementURL}}/storage/{{$.Site}}/{{$.Bucket}}/{{$d.Name}}">{{$d.Name}}</a>
        </div>
    </div>
{{end}}
  </article>
</section>
